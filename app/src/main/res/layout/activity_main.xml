<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <ImageView
            android:id="@+id/ivCover"
            android:layout_width="70dp"
            android:layout_height="125dp"
            android:text="Hello World!"
            android:src="@mipmap/cover_10"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <View
            android:id="@+id/iv_shadow_bottom"
            app:layout_constraintStart_toStartOf="@id/ivCover"
            app:layout_constraintEnd_toEndOf="@id/ivCover"
            app:layout_constraintTop_toTopOf="@id/ivCover"
            android:layout_marginTop="103dp"
            android:background="@drawable/ic_comment_cover_shadow_bottom"
            android:layout_width="98dp"
            android:layout_height="34dp"/>
    <View
            android:id="@+id/iv_shadow_right"
            app:layout_constraintTop_toTopOf="@id/ivCover"
            app:layout_constraintStart_toEndOf="@id/ivCover"
            android:background="@drawable/ic_comment_cover_shadow_right"
            android:layout_width="8dp"
            android:layout_height="125dp"/>

    <EditText

            android:id="@+id/etDelta"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btDelta"
            android:text="设置 Delta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>